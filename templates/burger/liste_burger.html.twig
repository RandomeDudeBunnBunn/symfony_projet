{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Liste Burger{% endblock %}

{% block body %}
    <div>
        <h1 class="text-3xl font-bold underline m-0">
            Liste Burger
        </h1>
        <a href="{{ path('burger_creation') }}"> + </a>
    </div>

    <div>
        <ol>
            {% for burger in burgers %}
                <li>
                    <a href="{{ path("burger_detail", {'id': burger.id}) }}">
                        {{ burger.nom }}    
                    </a> 
                </li>
            {% endfor %}
        </ol>
    </div>

{% endblock %}